<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.innovation.tencent.botany_cultivate.ui.activity.DetailActivity">

    <ImageView
        android:id="@+id/activity_detail_iv_product_pic"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:id="@+id/activity_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_detail_iv_product_pic"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/activity_detail_tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玫瑰"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/activity_detail_tv_product_phase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="花期一个月"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/activity_detail_tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#FFB90F"
            android:layout_weight="1"
            android:gravity="right"
            android:text="35元"/>

    </LinearLayout>

    <View
        android:id="@+id/activity_detail_div"
        android:layout_below="@id/activity_detail_ll"
        android:layout_width="fill_parent"
        android:layout_height="5px"
        android:background="?android:attr/listDivider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_detail_div"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/activity_detail_iv_portrait"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/activity_detail_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/activity_detail_iv_portrait" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015.10.21"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/activity_detail_iv_portrait"
            android:layout_alignStart="@+id/activity_detail_tv_user_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地点"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/activity_detail_iv_portrait"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="70dp" />

        <TextView
            android:id="@+id/activity_detail_tv_user_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成都"
            android:textSize="18sp"
            android:layout_alignBottom="@+id/activity_detail_iv_portrait"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp" />

        <TextView
            android:id="@+id/activity_detail_tv_product_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述 如果你无法简洁的表达你的想法，那只说明你还不够了解它。 -- 阿尔伯特·爱因斯坦"
            android:layout_below="@id/activity_detail_iv_portrait"
            android:paddingTop="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingTop="8dp"
        android:paddingBottom="4dp">

        <RadioButton
            android:id="@+id/activity_detail_btn_return"
            style="@style/detail_bottom_button"
            android:text="返回"
            android:drawableTop="@mipmap/ic_launcher"/>
        <RadioButton
            android:id="@+id/activity_detail_btn_comment"
            style="@style/detail_bottom_button"
            android:text="评论"
            android:drawableTop="@mipmap/ic_launcher"/>
        <RadioButton
            android:id="@+id/activity_detail_btn_collect"
            style="@style/detail_bottom_button"
            android:text="收藏"
            android:drawableTop="@mipmap/ic_launcher"/>
        <RadioButton
            android:id="@+id/activity_detail_btn_more"
            style="@style/detail_bottom_button"
            android:text="更多"
            android:drawableTop="@mipmap/ic_launcher"/>
        <RadioButton
            android:id="@+id/activity_detail_btn_buy"
            style="@style/detail_bottom_button"
            android:text="马上购买"
            android:drawableTop="@mipmap/ic_launcher"/>
    </LinearLayout>
</RelativeLayout>
