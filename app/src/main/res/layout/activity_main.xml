<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="#66CC66">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="首页"
            android:id="@+id/tv_title_main"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <com.innovation.tencent.botany_cultivate.ui.view.MyViewPager
        android:id="@+id/vp_main"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/rg_main">
    </com.innovation.tencent.botany_cultivate.ui.view.MyViewPager>

    <RadioGroup
        android:id="@+id/rg_main"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/selector_tab_home_main"
            android:gravity="center"
            android:text="首页"
            android:layout_marginTop="4dp"
            android:textColor="@drawable/selector_tab_text_main"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_garden_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="我的花园"
            android:layout_marginTop="4dp"
            android:drawableTop="@drawable/selector_tab_garden_main"
            android:textColor="@drawable/selector_tab_text_main"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_shop_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="市场"
            android:layout_marginTop="4dp"
            android:drawableTop="@drawable/selector_tab_shop_main"
            android:textColor="@drawable/selector_tab_text_main"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/rb_individual_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="个人中心"
            android:layout_marginTop="4dp"
            android:drawableTop="@drawable/selector_tab_individual_main"
            android:textColor="@drawable/selector_tab_text_main"
            android:textSize="12sp" />
    </RadioGroup>
</RelativeLayout>